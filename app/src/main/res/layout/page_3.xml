<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3cbb54">
    <ImageView
        android:id="@+id/image3"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:src="@drawable/letsgo"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="100dp"
        android:scaleType="fitCenter"
        />

    <TextView
        android:id="@+id/away"
        android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/image3"
        android:text="Your're just one step away.."
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginLeft="80dp"
        />

    <TextView
        android:id="@+id/please"
        android:layout_marginTop="0dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/away"
        android:text="Please sign In!"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginLeft="140dp"
        />

    <TextView
        android:id="@+id/click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/please"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="100dp"
        android:text="Click to Sign In"
        android:textColor="#9C000000"
        android:textSize="25dp"
        />

    <Button
        android:id="@+id/sign_in"
        android:layout_below="@id/click"
        android:text="Sign In"
        android:textSize="20dp"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:layout_width="100dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp"
        android:textColor="#000"
        />

</RelativeLayout>