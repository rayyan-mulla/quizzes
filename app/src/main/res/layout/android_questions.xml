<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AndroidQuestion"
    android:background="@drawable/background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="25dp"
            android:text="Score: 0"
            android:textSize="25dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/question_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="195dp"
            android:layout_marginTop="30dp"
            android:text="1/10"
            android:textSize="25dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignBaseline="@+id/question_no"
            android:layout_marginLeft="80dp"
            android:layout_toRightOf="@+id/question_no"
            android:text="00:30"
            android:textSize="25dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        >
        <TextView
            android:id="@+id/question"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1) What is the full form of DVM?"
            android:background="@color/white"
            android:textColor="#000"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center"
            />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        >

        <RadioButton
            android:id="@+id/option1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data virtual Machine"
            android:textColor="@color/black"
            android:buttonTint="#9A000000"
            android:textSize="20dp"
            />
        <View
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#9A000000"/>

        <RadioButton
            android:id="@+id/option2"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Direct virtual machine"
            android:textColor="@color/black"
            android:buttonTint="#9A000000"
            android:textSize="20dp"
            />
        <View
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#9A000000"/>
        <RadioButton
            android:id="@+id/option3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Direct visual machine"
            android:textColor="@color/black"
            android:buttonTint="#9A000000"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            />
        <View
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#9A000000"/>
        <RadioButton
            android:id="@+id/option4"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dalvik virtual machine"
            android:textColor="@color/black"
            android:buttonTint="#9A000000"
            android:textSize="20dp"
            />
    </RadioGroup>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="70dp"
        >
        <Button
            android:id="@+id/confirm"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:background="@color/dark_blue"
            android:textStyle="bold"
            android:layout_marginLeft="45dp"
            />
        <Button
            android:id="@+id/next"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:background="@color/dark_blue"
            android:textStyle="bold"
            android:layout_marginLeft="150dp"
            />
    </LinearLayout>

</LinearLayout>